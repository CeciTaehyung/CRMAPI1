@model CRM.DTOs.customerDTOs.GetIdResultCustomerDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>
<h4> Cliente</h4>

<hr />
<form asp-action="Details">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input  asp-action="Id" type="hidden"/>
    <div class="row">
        <div class="col-4">
           <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" disabled class="form-control"/>
                <span asp-validation-for="Nombre" class="text-danger"></span>

           </div>
        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            <label asp-for="LastName"  class="control-label"></label>
            <input  asp-for="LastName" disabled class="form-control"/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="Address" class="control-label"></label>
            <textarea asp-for="Address" disable class="form-control"> </textarea> 
            <span asp-validation-for="Address" class="text-danger"></span>

        </div>
    </div>
    <br />
    <div class="row-cols-12">
        <div class="form-group">
            <a asp-action="Index" class="btn btn-secondary">Ir ver clientes</a>
        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
